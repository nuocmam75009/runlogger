datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String    @id @default(uuid())
  name        String?
  email       String    @unique
  image       String?
  dateOfBirth DateTime?
  createdAt   DateTime  @default(now())
  Run         Run[]
}

model Run {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  distance  Float
  time      Int
  pace      Int
  heartRate Int?
  cadence   Int?
  notes     String?
  createdAt DateTime @default(now())
}
